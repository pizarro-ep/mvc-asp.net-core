@model List<UserRolesViewModel>

@{
    ViewBag.Title = "Gestión de roles";
    var UserId = ViewBag.UserId;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h3>User: @ViewBag.UserName </h3>
        </div>
        <div class="card-header">
            <h4>Gestión de roles</h4>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].RoleName - @Model[i].Description
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Actualizar" class="btn btn-success"/>
            <a asp-action="EditUser" asp-route-id="@UserId" class="btn btn-outline-danger">Cancelar</a>
        </div>
    </div>
</form>